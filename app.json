{
  "expo": {
    "name": "Tempr",
    "slug": "tempr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "tempr",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tempr.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Tempr uses your location to generate contextual music queues.",
        "NSCameraUsageDescription": "Tempr uses the camera for video-based mood detection.",
        "NSMicrophoneUsageDescription": "Tempr captures ambient audio for mood analysis.",
        "NSPhotoLibraryUsageDescription": "Tempr allows you to upload videos for mood-based queue generation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.tempr.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-location",
      "expo-notifications",
      "expo-image-picker"
    ]
  }
}
